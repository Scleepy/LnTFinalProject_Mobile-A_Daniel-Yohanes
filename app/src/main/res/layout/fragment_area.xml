<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.area"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineTextAreaCalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.105" />

        <TextView
            android:id="@+id/titleAreaCalculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_extra_black"
            android:text="Area Calculator"
            android:textColor="#2C272E"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideLineTextAreaCalculator"
            app:layout_constraintWidth_percent="0.8" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/squareCalculatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleAreaCalculator">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineAreaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.095" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineAreaImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.51" />

            <ImageView
                android:id="@+id/squarePanel"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:src="@drawable/squarearea"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/squarePanel"
                app:layout_constraintStart_toStartOf="@id/guideLineAreaImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                app:srcCompat="@drawable/areaicon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Square"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.36" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Process"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/squarePanel"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.16000003" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Area = S x S"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/processTextSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Area = ? x ?"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage2"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.08" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Length: "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage2"
                app:layout_constraintTop_toBottomOf="@+id/processTextSquare"
                app:layout_constraintVertical_bias="0.060000002" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Result: "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage2"
                app:layout_constraintTop_toBottomOf="@+id/editTextLengthSquare"
                app:layout_constraintVertical_bias="0.100000024" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="S = Side"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/editTextLengthSquare"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="Ex: 32"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#B1AFBB"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage2"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/resultTextSquare"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfieldwhite"
                android:clickable="false"
                android:cursorVisible="true"
                android:fontFamily="@font/futura_heavy"
                android:hint="Input length"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#000000"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaImage2"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/triangleCalculatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/squareCalculatorContainer">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineTriangleImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.095" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineAreaTriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.51" />

            <ImageView
                android:id="@+id/trianglePanel"
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:src="@drawable/trianglearea"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Result: "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/editTextHeightTriangle"
                app:layout_constraintVertical_bias="0.100000024" />

            <EditText
                android:id="@+id/resultTextTriangle"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfieldwhite"
                android:clickable="false"
                android:cursorVisible="true"
                android:fontFamily="@font/futura_heavy"
                android:hint="Input length"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#000000"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <EditText
                android:id="@+id/editTextBaseTriangle"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="Ex: 22"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#B1AFBB"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Base:  "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/formulaTriangle"
                app:layout_constraintVertical_bias="0.100000024" />

            <EditText
                android:id="@+id/editTextHeightTriangle"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="Ex: 32"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#B1AFBB"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Height:  "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/editTextBaseTriangle"
                app:layout_constraintVertical_bias="0.062" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Process"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/trianglePanel"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toTopOf="@+id/trianglePanel"
                app:layout_constraintVertical_bias="0.13" />

            <TextView
                android:id="@+id/attrTriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="B = Base\nH = Height"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/imageTriangle"
                app:layout_constraintStart_toStartOf="@id/guideLineTriangleImage"
                app:layout_constraintTop_toBottomOf="@id/imageTriangleFormula" />

            <ImageView
                android:id="@+id/imageTriangle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/triangleCalculatorContainer"
                app:layout_constraintStart_toStartOf="@id/guideLineTriangleImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                app:srcCompat="@drawable/triangleicon" />

            <TextView
                android:id="@+id/titleTriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Triangle"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/imageTriangle"
                app:layout_constraintStart_toStartOf="@+id/guideLineTriangleImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <ImageView
                android:id="@+id/imageTriangleFormula"
                android:layout_width="125dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toTopOf="@+id/imageTriangle"
                app:layout_constraintStart_toStartOf="@id/guideLineTriangleImage"
                app:layout_constraintTop_toBottomOf="@+id/titleTriangle"
                app:layout_constraintVertical_bias="0.060000002"
                app:srcCompat="@drawable/areatriangle" />

            <TextView
                android:id="@+id/formulaTriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Area =     x ? x ?"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="0.01999998" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/whitefraction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="@+id/guideLineAreaTriangle"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/circleCalculatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/triangleCalculatorContainer">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:src="@drawable/squarearea"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineCircleImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.095" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineCircleProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.51" />

            <TextView
                android:id="@+id/titleCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Circle"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/imageCircle"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37" />

            <ImageView
                android:id="@+id/imageCircle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/circleCalculatorContainer"
                app:layout_constraintStart_toStartOf="@id/guidelineCircleImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                app:srcCompat="@drawable/circleicon" />

            <TextView
                android:id="@+id/processCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Area = π x R x R"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/imageCircle"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleImg"
                app:layout_constraintTop_toBottomOf="@+id/titleCircle"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/attrCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="R = Radius"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/imageCircle"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleImg"
                app:layout_constraintTop_toBottomOf="@+id/processCircle"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/processTitleCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Process"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/circleCalculatorContainer"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleProcess"
                app:layout_constraintTop_toTopOf="@+id/circleCalculatorContainer"
                app:layout_constraintVertical_bias="0.16000003" />

            <TextView
                android:id="@+id/processCircleWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Area = π x ? x ?"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleProcess"
                app:layout_constraintTop_toBottomOf="@+id/processTitleCircle"
                app:layout_constraintVertical_bias="0.100000024" />

            <TextView
                android:id="@+id/textRadius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Radius: "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/circleCalculatorContainer"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleProcess"
                app:layout_constraintTop_toBottomOf="@+id/processCircleWhite"
                app:layout_constraintVertical_bias="0.060000002" />

            <EditText
                android:id="@+id/editTextRadiusCircle"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="Ex: 32"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#B1AFBB"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleProcess"
                app:layout_constraintTop_toBottomOf="@+id/textRadius" />


            <TextView
                android:id="@+id/titleResultCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="Result: "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleProcess"
                app:layout_constraintTop_toBottomOf="@+id/editTextRadiusCircle"
                app:layout_constraintVertical_bias="0.100000024" />

            <EditText
                android:id="@+id/resultCircleArea"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfieldwhite"
                android:clickable="false"
                android:cursorVisible="true"
                android:fontFamily="@font/futura_heavy"
                android:hint="Input length"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#000000"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guidelineCircleProcess"
                app:layout_constraintTop_toBottomOf="@+id/titleResultCircle" />




        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="345dp"
            android:layout_height="100dp"
            android:src="@drawable/navpanel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleCalculatorContainer"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>