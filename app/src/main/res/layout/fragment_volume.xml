<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.volume"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTitleVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.079" />

        <TextView
            android:id="@+id/titleVolumeCalculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_extra_black"
            android:text="@string/volume_calculator"
            android:textColor="@color/blackTheme"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineTitleVolume"
            app:layout_constraintWidth_percent="0.8" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cubeCalculatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleVolumeCalculator">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineCubeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.095" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineCubeProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.51" />

            <ImageView
                android:id="@+id/cubePanel"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:src="@drawable/squarearea"
                android:contentDescription="@string/cube_volume_process"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iconCube"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/cube_icon"
                app:layout_constraintBottom_toBottomOf="@+id/cubePanel"
                app:layout_constraintStart_toStartOf="@id/guidelineCubeImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                app:srcCompat="@drawable/cubeicon" />

            <TextView
                android:id="@+id/cubeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/cube_text"
                android:textColor="@color/blackTheme"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/iconCube"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/processCube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/cube_formula"
                android:textColor="@color/blackTheme"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/iconCube"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeImg"
                app:layout_constraintTop_toBottomOf="@+id/cubeTitle"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/attrCube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/attr_cube"
                android:textColor="@color/blackTheme"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/iconCube"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeImg"
                app:layout_constraintTop_toBottomOf="@+id/processCube" />

            <TextView
                android:id="@+id/titleProcessCube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/process_text"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/cubeCalculatorContainer"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeProcess"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.11" />

            <TextView
                android:id="@+id/formulaCube"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/cube_volume_process"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeProcess"
                app:layout_constraintTop_toBottomOf="@+id/titleProcessCube"
                app:layout_constraintVertical_bias="0.08" />

            <TextView
                android:id="@+id/sideTitleCube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/side_text"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeProcess"
                app:layout_constraintTop_toBottomOf="@+id/formulaCube"
                app:layout_constraintVertical_bias="0.060000002" />

            <EditText
                android:id="@+id/editTextSideSquare"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="@string/hint_32"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/darkGreyTheme"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeProcess"
                app:layout_constraintTop_toBottomOf="@+id/sideTitleCube" />

            <TextView
                android:id="@+id/resultTitleCube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/result_text"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeProcess"
                app:layout_constraintTop_toBottomOf="@+id/editTextSideSquare"
                app:layout_constraintVertical_bias="0.100000024" />

            <EditText
                android:id="@+id/resultTextCube"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfieldwhite"
                android:fontFamily="@font/futura_heavy"
                android:hint="@string/input_side_text"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/blackTheme"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guidelineCubeProcess"
                app:layout_constraintTop_toBottomOf="@+id/resultTitleCube" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/squarePyramidCalculatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cubeCalculatorContainer">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineSquarePyramidImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.095" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineSquarePyramidProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.51" />

            <ImageView
                android:id="@+id/squarePyramidPanel"
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:src="@drawable/trianglearea"
                android:contentDescription="@string/volume_panel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/resultTitleSquarePyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/result_text"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/editTextHeightSquarePyramid"
                app:layout_constraintVertical_bias="0.100000024" />

            <EditText
                android:id="@+id/resultTextSquarePyramid"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfieldwhite"
                android:fontFamily="@font/futura_heavy"
                android:hint="@string/input_values_text"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/blackTheme"
                android:textSize="12sp"
                app:layout_constraintHeight_percent="0.10"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/resultTitleSquarePyramid" />

            <EditText
                android:id="@+id/editTextBaseSquarePyramid"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="@string/hint_22"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/darkGreyTheme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/baseTitleSquarePyramid" />

            <TextView
                android:id="@+id/baseTitleSquarePyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/base_text"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/formulaSquarePyramid"
                app:layout_constraintVertical_bias="0.04" />

            <EditText
                android:id="@+id/editTextHeightSquarePyramid"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="@string/hint_32"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/darkGreyTheme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/heightTitleSquarePyramid" />

            <TextView
                android:id="@+id/heightTitleSquarePyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/height_text"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/editTextBaseSquarePyramid"
                app:layout_constraintVertical_bias="0.062" />

            <TextView
                android:id="@+id/titleProcessSquarePyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/process_text"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/squarePyramidCalculatorContainer"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toTopOf="@+id/squarePyramidCalculatorContainer"
                app:layout_constraintVertical_bias="0.10" />

            <TextView
                android:id="@+id/attrSquarePyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:lineSpacingExtra="10sp"
                android:text="@string/attr_squarepyramid"
                android:textColor="@color/blackTheme"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/iconSquarePyramid"
                app:layout_constraintStart_toStartOf="@id/guidelineSquarePyramidImg"
                app:layout_constraintTop_toBottomOf="@id/processSquarePyramid"
                app:layout_constraintVertical_bias="0.39" />

            <ImageView
                android:id="@+id/iconSquarePyramid"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/icon_square_pyramid"
                app:layout_constraintBottom_toBottomOf="@+id/squarePyramidCalculatorContainer"
                app:layout_constraintStart_toStartOf="@id/guidelineSquarePyramidImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.825"
                app:srcCompat="@drawable/squarepyramidicon" />

            <TextView
                android:id="@+id/squarePyramidTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/square_npyramid_text"
                android:textColor="@color/blackTheme"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/iconSquarePyramid"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.20" />

            <ImageView
                android:id="@+id/processSquarePyramid"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:contentDescription="@string/process_square_pyramid"
                app:layout_constraintBottom_toTopOf="@+id/iconSquarePyramid"
                app:layout_constraintStart_toStartOf="@id/guidelineSquarePyramidImg"
                app:layout_constraintTop_toBottomOf="@+id/squarePyramidTitle"
                app:layout_constraintVertical_bias="0.060000002"
                app:srcCompat="@drawable/volumesquarepyramid" />

            <TextView
                android:id="@+id/formulaSquarePyramid"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:fontFamily="@font/futura_heavy"
                android:text="Volume =     x ? x ?"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/titleProcessSquarePyramid"
                app:layout_constraintVertical_bias="0.01999998" />

            <ImageView
                android:id="@+id/fractionOver3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fractionsquarepyramid"
                android:contentDescription="@string/fraction_over_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="@+id/guidelineSquarePyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/titleProcessSquarePyramid" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rectangularPyramidCalculatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/squarePyramidCalculatorContainer">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineRectangularPyramidImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.095" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineRectangularPyramidProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.51" />

            <ImageView
                android:id="@+id/rectangularPyramidPanel"
                android:layout_width="350dp"
                android:layout_height="450dp"
                android:src="@drawable/type3panel"
                android:contentDescription="@string/volume_panel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iconRectangularPyramid"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/icon_rectangular_pyramid"
                app:layout_constraintBottom_toBottomOf="@+id/rectangularPyramidPanel"
                app:layout_constraintStart_toStartOf="@id/guidelineRectangularPyramidImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.86"
                app:srcCompat="@drawable/recpyramidicon" />

            <TextView
                android:id="@+id/rectangularPyramidTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/rectangular_text"
                android:textColor="@color/blackTheme"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/iconRectangularPyramid"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15" />

            <TextView
                android:id="@+id/rectangularPyramidTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/pyramid_text"
                android:textColor="@color/blackTheme"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidImg"
                app:layout_constraintTop_toBottomOf="@+id/rectangularPyramidTitle1" />

            <ImageView
                android:id="@+id/processRectangularPyramid"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/formularectangularpyramid"
                android:contentDescription="@string/process_rectangular_pyramid_formula"
                app:layout_constraintBottom_toTopOf="@id/iconRectangularPyramid"
                app:layout_constraintStart_toStartOf="@id/guidelineRectangularPyramidImg"
                app:layout_constraintTop_toBottomOf="@+id/rectangularPyramidTitle2"
                app:layout_constraintVertical_bias="0.120000005" />

            <TextView
                android:id="@+id/attrRectangularPyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:lineSpacingExtra="14sp"
                android:text="@string/attr_rectangular_pyramid"
                android:textColor="@color/blackTheme"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/iconRectangularPyramid"
                app:layout_constraintStart_toStartOf="@id/guidelineRectangularPyramidImg"
                app:layout_constraintTop_toBottomOf="@id/processRectangularPyramid" />

            <TextView
                android:id="@+id/titleProcessRectangularPyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/process_text"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/rectangularPyramidCalculatorContainer"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidProcess"
                app:layout_constraintTop_toTopOf="@+id/rectangularPyramidCalculatorContainer"
                app:layout_constraintVertical_bias="0.09" />

            <TextView
                android:id="@+id/formulaRectangularPyramid"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:fontFamily="@font/futura_heavy"
                android:text="Volume =     x ? x ? x ?"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/titleProcessRectangularPyramid"
                app:layout_constraintVertical_bias="0.01999998" />

            <ImageView
                android:id="@+id/fractionOver3RectangularPyramid"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/fraction_over_3"
                android:src="@drawable/fractionsquarepyramid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/titleProcessRectangularPyramid" />

            <TextView
                android:id="@+id/lengthTitleRectangularPyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/length_text"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/formulaRectangularPyramid"
                app:layout_constraintVertical_bias="0.01" />

            <EditText
                android:id="@+id/editTextLengthRectangularPyramid"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="@string/hint_22"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/darkGreyTheme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/lengthTitleRectangularPyramid" />

            <TextView
                android:id="@+id/widthTitleRectangularPyramid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_heavy"
                android:text="@string/width_text"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/editTextLengthRectangularPyramid"
                app:layout_constraintVertical_bias="0.050000012" />

            <EditText
                android:id="@+id/editTextWidthRectangularPyramid"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/userfield"
                android:fontFamily="@font/futura_heavy"
                android:hint="@string/hint_64"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/darkGreyTheme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guidelineRectangularPyramidProcess"
                app:layout_constraintTop_toBottomOf="@+id/widthTitleRectangularPyramid" />

            <TextView
                android:id="@+id/heightTitleRectangularPyramid"
